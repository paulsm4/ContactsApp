            <th>&nbsp;</th>
        </tr>

        @for (int i = 0; i < Model.Notes.Count(); i++)
        {
            <tr>
                <td>@Html.DisplayFor(model => model.Notes[i].Date)</td>
                <td>@Html.DisplayFor(model => model.Notes[i].Text)</td>
                <td>
                    @Html.ActionLink("Edit Note", "EditNote", new { noteId = Model.Notes[i].NoteId }) |
